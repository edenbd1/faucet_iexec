{
  "name": "faucet-oauth-app",
  "version": "1.0.0",
  "description": "GitHub OAuth Application with React and Node.js",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "ts-node server.ts",
    "server:watch": "nodemon --exec ts-node server.ts",
    "client": "cd frontend && npm start",
    "build": "tsc",
    "install-frontend": "cd frontend && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["oauth", "github", "react", "nodejs", "express"],
  "author": "",
  "license": "MIT"
}
